---
const { image, name, dataFilter, info, link, projectNumber } = Astro.props;
---

<div
  class="col-lg-4 col-md-6 awro-project"
  data-filter="awro-project"
  data-filtering={dataFilter}
>
  <div class="single-project-item">
    <img class="project-image" src={image} alt="" />
    <div class="single-project-overlay">
      <h4 class="title">{name}</h4>

      <span>{info}</span>
      <div>
        <!-- style="background:transparent;color:transparent;border-color: transparent;" -->
        <a class="project-link" data-project-number={projectNumber}>
          <!-- style="background-color: trasparent;color:transparent;" -->
          <i class="fa fa-info" aria-hidden="true"></i>
        </a>
        {
          link && (
            <a target="_blank" href={link}>
              <i class="fal fa-long-arrow-right" />
            </a>
          )
        }
      </div>
    </div>
  </div>
</div>
